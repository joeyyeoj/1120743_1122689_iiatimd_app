<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/offlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="Je kan je profiel offline niet updaten!"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/EditView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <ScrollView
        android:id="@+id/EditView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <EditText
                    android:id="@+id/telefoonInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Telefoonnummer"
                    android:phoneNumber="true"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/telefoonIcon"
                    app:layout_constraintTop_toBottomOf="@+id/naamInput">

                </EditText>

                <ImageView
                    android:id="@+id/tiktokIcon"
                    android:layout_width="32dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/tiktokInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tiktokInput"
                    app:srcCompat="@drawable/ic_tiktok_logo" />

                <EditText
                    android:id="@+id/naamInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Naam"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/naamIcon"
                    app:layout_constraintTop_toBottomOf="@+id/delenButton">

                </EditText>

                <EditText
                    android:id="@+id/twitterInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Twitter"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emailInput">

                </EditText>

                <EditText
                    android:id="@+id/facebookInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Facebook"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/twitterInput">

                </EditText>

                <EditText
                    android:id="@+id/snapchatInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Snapchat"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/facebookInput">

                </EditText>

                <EditText
                    android:id="@+id/instagramInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Instagram"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/snapchatInput">

                </EditText>

                <EditText
                    android:id="@+id/linkedInInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="LinkedIn"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/instagramInput">

                </EditText>

                <EditText
                    android:id="@+id/tiktokInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="TikTok"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linkedInInput">

                </EditText>

                <EditText
                    android:id="@+id/birthdayInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Geboortedatum"
                    android:singleLine="true"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tiktokInput">

                </EditText>

                <ImageView
                    android:id="@+id/linkedinIcon"
                    android:layout_width="33dp"
                    android:layout_height="34dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/linkedInInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linkedInInput"
                    app:srcCompat="@drawable/ic_iconmonstr_linkedin_3" />

                <ImageView
                    android:id="@+id/instagramIcon"
                    android:layout_width="35dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/instagramInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/instagramInput"
                    app:srcCompat="@drawable/ic_iconmonstr_instagram_11" />

                <ImageView
                    android:id="@+id/snapchatIcon"
                    android:layout_width="33dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/snapchatInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/snapchatInput"
                    app:srcCompat="@drawable/ic_iconmonstr_snapchat_3" />

                <ImageView
                    android:id="@+id/facebookIcon"
                    android:layout_width="38dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/facebookInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/facebookInput"
                    app:srcCompat="@drawable/ic_iconmonstr_facebook_3" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="39dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/twitterInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/twitterInput"
                    app:srcCompat="@drawable/ic_iconmonstr_twitter_3" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="39dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/emailInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/emailInput"
                    app:srcCompat="@drawable/ic_iconmonstr_email_2" />

                <ImageView
                    android:id="@+id/geboortedatumIcon"
                    android:layout_width="29dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/birthdayInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/birthdayInput"
                    app:srcCompat="@drawable/ic_iconmonstr_candy_18" />

                <ImageView
                    android:id="@+id/naamIcon"
                    android:layout_width="30dp"
                    android:layout_height="31dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/naamInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/naamInput"
                    app:srcCompat="@drawable/ic_iconmonstr_id_card_8" />

                <ImageView
                    android:id="@+id/telefoonIcon"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_marginStart="32dp"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    app:layout_constraintBottom_toBottomOf="@+id/telefoonInput"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/telefoonInput"
                    app:srcCompat="@drawable/ic_iconmonstr_phone_1" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:allowUndo="false"
                    android:backgroundTint="@color/dark_orange_darker"
                    android:fontFamily="@font/open_sans"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:text=" "
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/telefoonInput">

                </EditText>

                <Button
                    android:id="@+id/delenButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/primary_button"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/delenButtonText"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/opslaanButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/primary_button"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="@string/opslaanbuttontekst"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/birthdayInput" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content">

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/light_orange"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Uitloggen"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>